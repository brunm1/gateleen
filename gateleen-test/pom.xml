    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </profile>
        <profile>
            <id>nonUiIntegrationTests</id>
            <properties>
                <skipTests>false</skipTests>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <systemPropertyVariables>
                                <log4j.configuration>file:${basedir}/src/test/resources/log4j-nonUiTest.properties
                                </log4j.configuration>
                            </systemPropertyVariables>
                            <excludes>
                                <exclude>org/swisspush/gateleen/hookjs/**</exclude>
                            </excludes>
                            <includes>
                                <include>org/swisspush/gateleen/**</include>
                            </includes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>uiIntegrationTests</id>
            <properties>
                <skipTests>false</skipTests>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <systemPropertyVariables>
                                <sel_chrome_driver>${sel_chrome_driver}</sel_chrome_driver>
                            </systemPropertyVariables>
                            <includes>
                                <include>org/swisspush/gateleen/hookjs/**</include>
                            </includes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

    </profiles>
</project>
